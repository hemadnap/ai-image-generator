{
  "name": "opnng-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for OPNNG.IO",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local --env development",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "preview": "wrangler preview",
    "tail": "wrangler tail",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240805.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.55.0",
    "msw": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0",
    "wrangler": "^3.26.0"
  }
}
